<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:drawable="@drawable/erase">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/gridSignColor"/>
            <padding android:top="15dp" android:left="15dp"
                android:right="15dp" android:bottom="15dp"/>
        </shape>
    </item>

    <item android:state_pressed="true" android:drawable="@drawable/erase">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/gridNumberColor"/>
            <padding android:top="15dp" android:left="15dp"
                android:right="15dp" android:bottom="15dp"/>
        </shape>
    </item>
</selector>