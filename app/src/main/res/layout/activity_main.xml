<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mainInputGrid">

            <TextView
                android:id="@+id/mainNumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/modeTextColor"
                android:textStyle="bold"
                android:textSize="42sp"/>

            <TextView
                android:id="@+id/mainResultText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="0"
                android:layout_marginTop="5dp"
                android:gravity="end"/>

        </LinearLayout>
       
        <TableLayout
            android:id="@+id/mainInputGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <TableRow
                android:id="@+id/tr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g00"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="%"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="28sp"/>

                <TextView
                    android:id="@+id/g01"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="CE"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g02"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="C"
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="28sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="1dp"
                    app:cardBackgroundColor="@color/gridSignColor"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/g03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/erase"
                        app:tint="@color/modeViewColor"
                        android:background="@drawable/grid_item_erase"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:id="@+id/tr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g10"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="1/x"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g11"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="x²"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g12"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="2√x"
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g13"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="÷"
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>
            </TableRow>

            <TableRow
                android:layout_gravity="center"
                android:id="@+id/tr3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g20"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="7"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g21"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="8"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g22"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="9"
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g23"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="×"
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g30"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="4"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g31"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="5"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g32"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="6"
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g33"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="-"
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g40"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="1"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g41"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="2"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g42"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="3"
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g43"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="+"
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/g50"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_margin="2dp"
                    android:text="+/-"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g51"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_column="2"
                    android:layout_weight="0.25"
                    android:text="0"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g52"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="."
                    android:layout_margin="1dp"
                    android:background="@drawable/grid_item_number"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/g53"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:gravity="center"
                    android:textColor="@color/modeViewColor"
                    android:textStyle="bold"
                    android:text="="
                    android:layout_margin="1dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/grid_item_sign"
                    android:textSize="25sp"/>
            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>